@{
    Layout = "~/Views/Shared/AdminLayout/_LayoutAdministrator.cshtml";
    ViewBag.Title = "IndexDivHead";
}

<head>

</head>
<body>
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Dashboard</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Procurement Division Head</li>
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <table class="table table-hover" id="tableProcurement">
            <thead>
                <tr>
                    <th>
                        No.
                    </th>
                    <th>
                        Name Procurement
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Date Procurement
                    </th>
                    <th>
                        Quantitiy
                    </th>
                    <th>
                        Type Item
                    </th>
                    <th>
                        Item
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Procurement Form</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="Id">Id</label>
                            <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="Name">Name Procurement</label>
                            <input type="text" class="form-control" id="Name" placeholder="Name Item" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea type="text" class="form-control" id="Description" placeholder="Description" disabled="disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="Price">Price</label>
                            <input type="text" class="form-control" id="Price" placeholder="Price" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="DateProcurement">Date Procurement</label>
                            <input type="text" class="form-control datepicker" id="DateProcurement" placeholder="Date Procurement" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="text" class="form-control" id="Quantity" placeholder="Quantity" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="TypeItem"> Type Item </label>
                            <select id="TypeItem" class="form-control" disabled="disabled"></select>
                        </div>
                        <div class="form-group">
                            <label for="Item"> Name Item </label>
                            <select id="Item" class="form-control" disabled="disabled"></select>
                        </div>
                        <div class="form-group">
                            <label for="Status">Status</label>
                            <input type="text" class="form-control" id="Status1" disabled="disabled" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="Approve" style="display:none;" onclick="Approve();">Approve</button>
                    <button type="button" class="btn btn-primary" id="Reject" style="display:none;" onclick="Reject();">Reject</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>

@section scripts {
    <script src="https://momentjs.com/downloads/moment-with-locales.js"></script>
    <script src="~/Content/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <link href="~/Content/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DivHead/ProcurementDivHead/ProcurementDivHead.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}